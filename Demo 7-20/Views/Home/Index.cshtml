@{
    ViewBag.Title = "Index";
}

@using Posts.API;
@model Demo_7_20.Models.HomeViewModel

<link href="~/Content/Index.css" rel="stylesheet" />
<div class="container" style="width: 920px; margin: 40px auto;">
    <table class="table table-striped table-bordered" style="border: 5px solid #3333ff;">
        <tr>
            <th></th>
            <th>Date Created</th>
            <th>Author</th>
        </tr>
        @foreach (Post p in Model.Posts)
        {
            <tr>
                <td>@p.Title</td>
                <td>@p.Date.ToShortDateString()</td>
                <td>@p.Author.Username</td>
            </tr>
        }
    </table>
</div>


